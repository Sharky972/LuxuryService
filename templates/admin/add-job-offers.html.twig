{% extends 'base.html.twig' %}

{% block title %}
	Luxury Services recruitment & services
{% endblock %}


{% block body %}
	<form method="POST" action="{{path("app_")}}" accept-charset="UTF-8" id="candidateForm" role="form" data-parsley-validate="" enctype="multipart/form-data"><input name="_token" type="hidden" value="UYfchy67WuTVzhSstPK1RDZEIfgqpKCcLnLyhf8a">
		<section class="section-padding">
			<div class="container">
				<div class="row">
					<h3 class="text-extrabold">
						Add Job Offers</h3>
					<div class="col-xs-12 col-sm-6 col-md-4">
						<div class="input-field">
							<select id="type" name="type" style="display:block;">

								{% for job in job_category %}


									<option value="{{job.id}}">{{job.name}}</option>
								{% endfor %}

							</select>
							<label for="type" class="active">Type</label>
						</div>
					</div>
					<div class="clearfix visible-sm"></div>
					<div class="col-xs-12 col-sm-6 col-md-4">
						<div class="input-field">
							<input type="text" class="form-control" name="title" id="title" value="">
							<label for="title">Title</label>
						</div>
					</div>
					<div class="col-xs-12 col-sm-6 col-md-4">
						<div class="input-field">
							<input type="text" class="form-control" name="salary" id="salary" value="">
							<label for="salary">Salary</label>
						</div>
					</div>
					<div class="col-xs-12 col-sm-6 col-md-4">
						<div class="input-field">
							<input id="location" name="location" type="text" value="">
							<label for="location">Location</label>
						</div>
					</div>
					<div class="col-xs-12 col-sm-8">
						<div class="input-field">
							<input id="reference" name="reference" type="text" value="">
							<label for="reference">Reference</label>
						</div>
					</div>
					<div class="col-xs-12 col-sm-8">
						<div class="input-field">
							<input id="activity" name="activity" type="text" value="">
							<label for="activity">Activity</label>
						</div>
					</div>
					<div class="col-xs-12 col-sm-12">
						<div class="input-field">
							<textarea class="materialize-textarea" id="notes" name="notes" cols="50" rows="10"></textarea>
							<label for="notes">Leave any complementary notes here.</label>
						</div>
					</div>
				</div>
			</div>
		</section>
	</form>
{% endblock %}
